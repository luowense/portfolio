{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <section class="container postDisplay">
        <div class="post-picture">
            <img src="{{ post.picture }}" class="img-fluid" alt="Responsive image">
        </div>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">{{ post.title }}</h1>
                <p class="lead">{{ post.content | slice(0, 80)}} ...</p>
            </div>
        </div>
        <div>
            <p>{{ post.content }}</p>
        </div>
        <div class="commentPost">
            <h2>Comments</h2>
            <div>
                {% for comment in comments %}
                    <h3>{{ comment.title }}</h3>
                    <p>{{ comment.body }}</p>
                {% endfor %}
                {% if comment is not defined %}
                    <p>There is no comment for this post</p>
                {% endif %}
            </div>
        </div>
        <div class="comment-section">
            <h3>Leave a comment</h3>
            {{ form_start(comment_form) }}
            {{ form_widget(comment_form) }}
            <input class="btn-primary" type="submit" value="Send"/>
            {{ form_end(comment_form) }}
        </div>
    </section><!-- /container -->
{% endblock %}
