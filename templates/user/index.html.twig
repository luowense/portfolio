{% extends 'base.html.twig' %}

{% block title %}About Me{% endblock %}

{% block body %}
    {% for user in user %}
        <header class="user-info">
        </header>
        <main style="background-color: white !important;">
            <div class="row">
                <div class="left col-lg-4">
                    <div class="photo-left">
                        <img class="photo"
                             src="https://media-exp1.licdn.com/dms/image/C5603AQHP1x8UDlw9zQ/profile-displayphoto-shrink_200_200/0?e=1585785600&v=beta&t=8U6jVzN2kAzbY3YtbszOLIYQ3umhLCuPuxwWOR7jJwg"/>
                    </div>
                    <h4 class="name">{{ user.name }}</h4></br>
                    <p class="info"><strong>{{ user.email }}</strong></p>
                    <p class="desc">{{ user.description }}</p>

                    <div class="social">
                        <i class="fab fa-facebook-square" aria-hidden="true"></i>
                        <i class="fab fa-twitter-square" aria-hidden="true"></i>
                        <i class="fab fa-pinterest-square" aria-hidden="true"></i>
                        <i class="fab fa-tumblr-square" aria-hidden="true"></i>
                    </div>
                    <div class="linkedin">
                        <h2 class="mb-4" style="margin-top: -72px;"><a style="text-decoration: none;" href="https://www.linkedin.com/in/laurent-segura-52209669/">Follow me on
                                Linkedin</a></h2>
                    </div>
                </div>
                <div class="right col-lg-8">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                               aria-controls="home" aria-selected="true">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                               aria-controls="profile" aria-selected="false">Coding Languages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab"
                               aria-controls="contact" aria-selected="false">Languages</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <ul>
                                {% for skill in skills %}
                                    <li>{{ skill.name }}</li>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-warning" role="progressbar"
                                             style="width: 25%" aria-valuenow="{{ skill.level }}" aria-valuemin="0"
                                             aria-valuemax="100"></div>
                                    </div>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <ul>
                                {% for coding in codingLanguages %}
                                    <li>{{ coding.name }}</li>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar"
                                             style="width: 25%" aria-valuenow="{{ coding.level }}" aria-valuemin="0"
                                             aria-valuemax="100"></div>
                                    </div>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            <ul>
                                {% for language in speakingLanguages %}
                                    <li>{{ language.name }}</li>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-primary" role="progressbar"
                                             style="width: 25%" aria-valuenow="{{ language.level }}" aria-valuemin="0"
                                             aria-valuemax="100"></div>
                                    </div>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </main>



        <section class="cd-timeline js-cd-timeline">
            <div class="jumbotron">
                <h1 class="display-4">Professional Experience</h1>
                <p class="lead">Learn more about what I did</p>
                <hr class="my-4">
            </div>

            <div class="container max-width-lg cd-timeline__container">
                {% for experience in experiences %}

                    <div class="cd-timeline__block">
                        <div class="cd-timeline__img cd-timeline__img--picture">
                        </div> <!-- cd-timeline__img -->
                        <div class="cd-timeline__content text-component">
                            <h2>{{ experience.name }}</h2>
                            <p class="color-contrast-medium">{{ experience.description }}</p>

                            <div class="flex justify-between items-center">
                                <span class="cd-timeline__date">{{ experience.year }}</span>
                                <span><strong>{{ experience.place }}</strong></span>
                            </div>
                        </div> <!-- cd-timeline__content -->
                    </div> <!-- cd-timeline__block -->
                {% endfor %}
            </div>
        </section> <!-- cd-timeline -->



        <section class="cd-timeline js-cd-timeline">
            <div class="jumbotron">
                <h1 class="display-4">Education</h1>
                <p class="lead">Learn more about my education background</p>
            </div>

            <div class="container max-width-lg cd-timeline__container">
                {% for diploma in diplomas %}

                    <div class="cd-timeline__block">
                        <div class="cd-timeline__img cd-timeline__img--picture">
                        </div> <!-- cd-timeline__img -->
                        <div class="cd-timeline__content text-component">
                            <h2>{{ diploma.name }}</h2>
                            <p class="color-contrast-medium">{{ diploma.description }}</p>

                            <div class="flex justify-between items-center">
                                <span class="cd-timeline__date">{{ diploma.year }}</span>
                                <span><strong>{{ diploma.place }}</strong></span>
                            </div>
                        </div> <!-- cd-timeline__content -->
                    </div> <!-- cd-timeline__block -->
                {% endfor %}
            </div>
        </section> <!-- cd-timeline -->


    {% endfor %}
{% endblock %}
